{
  "name": "auth-monorepo",
  "version": "1.0.0",
  "description": "Sistema de autenticaciÃ³n desacoplado con microfrontends",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "backend:dev": "npm run start:dev --workspace=apps/backend",
    "backend:build": "npm run build --workspace=apps/backend",
    "backend:test": "npm run test --workspace=apps/backend",
    "mf-login:dev": "npm run start --workspace=apps/mf-login",
    "mf-login:build": "npm run build --workspace=apps/mf-login",
    "host:dev": "npm run start --workspace=apps/host",
    "host:build": "npm run build --workspace=apps/host",
    "dev:all": "concurrently \"npm run backend:dev\" \"npm run mf-login:dev\" \"npm run host:dev\"",
    "build:all": "npm run backend:build && npm run mf-login:build && npm run host:build",
    "test:all": "npm run backend:test",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2"
  }
}
